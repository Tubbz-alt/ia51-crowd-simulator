package framework.^agent.^behavior

import framework.environment.DynamicType
import org.arakhne.afc.math.geometry.d2.d.Point2d
import framework.^agent.MotionAlgorithmOutput

class KinematicSeekBehavior {

	def run(position : Point2d, linearSpeed : double, maxLinear : double, target : Point2d) : MotionAlgorithmOutput {
		var output = new MotionAlgorithmOutput(DynamicType.KINEMATIC)

		var direction = target - position
		direction.length = maxLinear

		output.linear = direction

		return output
	}
}
